{
  "name": "ladybird",
  "description": "Ladybird browser extension",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "node ./scripts/dev.mjs",
    "dev:wxt": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "npm run i18n:check && wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "i18n:check": "node scripts/check-locales.mjs",
    "i18n:unused-check": "node scripts/check-unused-locales.mjs",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@tailwindcss/postcss": "^4.0.0",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "wxt": "^0.20.6"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
